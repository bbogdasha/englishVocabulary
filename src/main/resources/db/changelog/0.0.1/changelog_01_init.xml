<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>

    <changeSet author="bogdan" id="vocabulary-1.0" dbms="postgresql">
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp" SCHEMA public;
        </sql>
    </changeSet>

    <changeSet author="bogdan" id="vocabulary-1.1">
        <createTable tableName="languages">
            <column name="language_id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="languagePK"/>
            </column>
            <column name="language_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="bogdan" id="vocabulary-1.2">
        <createSequence sequenceName="dictionary_id_sequence" dataType="bigint" incrementBy="1" maxValue="10000" minValue="1" startValue="1"/>
    </changeSet>

    <changeSet author="bogdan" id="vocabulary-1.3">
        <createTable tableName="dictionaries">
            <column name="dictionary_id" type="SERIAL" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="dictionary_pk"/>
            </column>
            <column name="native_language_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column name="learn_language_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column name="dictionary_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="bogdan" id="vocabulary-1.4">
        <addForeignKeyConstraint baseColumnNames="native_language_id"
                                 baseTableName="dictionaries"
                                 constraintName="fk_native_language_id"
                                 referencedColumnNames="language_id"
                                 referencedTableName="languages"
                                 validate="true"/>
    </changeSet>

    <changeSet author="bogdan" id="vocabulary-1.5">
        <addForeignKeyConstraint baseColumnNames="learn_language_id"
                                 baseTableName="dictionaries"
                                 constraintName="fk_learn_language_id"
                                 referencedColumnNames="language_id"
                                 referencedTableName="languages"
                                 validate="true"/>
    </changeSet>

</databaseChangeLog>